        "env": {
          "NODE_ENV": "development",
          "LOCALE": "en_US",
          "AWS_REGION": "us-west-2",
          "GRAPHQL_ENDPOINT": "https://API_ID.appsync-api.us-west-2.amazonaws.com/graphql",
